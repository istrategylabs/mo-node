{
  "name": "{{cookiecutter.package_name}}",
  "version": "{{cookiecutter.version}}",
  "description": "{{cookiecutter.project_name}} - {{cookiecutter.description}}",
  "main": "app/index.js",
  "scripts": {
    "test": "tape test/**/test-*.js",
    "start": "node app/index.js | bunyan",
    "start-dev": "nodemon app/index.js | bunyan"
    {% if cookiecutter.render_views == 'y' -%}
    ,"build": "gulp build:production",
    "watch": "gulp start"
    {%- endif %}
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/{{cookiecutter.github_username}}/{{cookiecutter.repo_name}}.git"
  },
  "author": "{{cookiecutter.authro_name}} <{{cookiecutter.email}}>",
  "license": "{{cookiecutter.license}}",
  "dependencies": {
    "cuid": "^1.2.5",
    "bluebird": "^3.3.4",
    "bunyan": "^1.5.1"
    {% if cookiecutter.use_redis == 'y' -%}
    ,"redis": "^2.3.0"
    {%- endif %}
    {% if cookiecutter.use_express == 'y' -%}
    ,"express": "^4.13.3",
    "express-session": "^1.11.3",
    "body-parser": "^1.13.3"
    {%- endif %}
    {% if cookiecutter.use_express == 'y' and cookiecutter.render_views == 'y' -%}
    ,"nunjucks": "^2.2.0",
    "foundation-sites": "6.2.0"
    {%- endif %}
    {% if cookiecutter.use_postgres == 'y' -%}
    ,"pg": "^4.4.3",
    "knex": "^0.9.0"
    {%- endif %}
    {% if cookiecutter.render_views == 'y' -%}
    ,"autoprefixer": "6.1.0",
    "babel-preset-es2015": "6.1.4",
    "babelify": "7.2.0",
    "browser-sync": "2.10.0",
    "browserify": "12.0.1",
    "browserify-shim": "3.8.12",
    "critical": "0.6.0",
    "del": "2.0.2",
    "foundation-sites": "6.2.0",
    "gulp": "3.9.0",
    "gulp-cssnano": "2.1.0",
    "gulp-htmlmin": "1.2.0",
    "gulp-if": "2.0.0",
    "gulp-nunjucks-render": "1.0.0",
    "gulp-postcss": "6.0.1",
    "gulp-rev": "6.0.1",
    "gulp-rev-replace": "0.4.2",
    "gulp-sass": "2.1.0",
    "gulp-sourcemaps": "1.6.0",
    "gulp-uglify": "1.4.2",
    "gulp-util": "3.0.6",
    "jquery": "2.1.4",
    "run-sequence": "1.1.4",
    "vinyl-buffer": "1.0.0",
    "vinyl-source-stream": "1.1.0"
    {%- endif %}
  },
  "devDependencies": {
    "tape": "^4.2.0",
    "nodemon": "^1.9.1"
    {% if cookiecutter.render_views == 'y' -%}
    ,"watchify": "3.6.0"
    {%- endif %}
  },
  {% if cookiecutter.render_views == 'y' -%}
  "browser": {
    "jquery": "./node_modules/jquery/dist/jquery.js",
    "foundation": "./node_modules/foundation-sites/js/foundation.js"
  },
  "browserify-shim": {
    "jquery": "$",
    "foundation": "foundation"
  },
  "browserify": {
    "transform": [
      "browserify-shim"
    ]
  },
  {%- endif %}
  "engineStrict": true,
  "engines": {
    "node": "4.3.1"
  }
}
